{
  "mcpServers": {
    "db-connect-mcp-pg": {
      "command": "python",
      "args": ["-m", "db_connect_mcp"],
      "env": {
        "DATABASE_URL": "postgresql://username:password@localhost:5432/your_database"
      }
    },
    "db-connect-mcp-mysql": {
      "command": "python",
      "args": ["-m", "db_connect_mcp"],
      "env": {
        "DATABASE_URL": "mysql://username:password@localhost:3306/your_database"
      }
    },
    "db-connect-mcp-clickhouse": {
      "command": "python",
      "args": ["-m", "db_connect_mcp"],
      "env": {
        "DATABASE_URL": "clickhouse://username:password@localhost:9000/your_database"
      }
    }
  }
}
